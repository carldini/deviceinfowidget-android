<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:layout_margin="4dp" android:background="@drawable/widgetbackground" >
        
	<TextView android:id="@+id/deviceInfoWidget_batteryChargeLabel" 
	    android:layout_width="wrap_content" android:layout_height="wrap_content"
	    android:paddingLeft="4dp" android:paddingRight="4dp" android:textColor="@color/light_grey"
	    android:text="Battery:" />
	<TextView android:id="@+id/deviceInfoWidget_batteryChargeValue" 
		android:layout_toRightOf="@id/deviceInfoWidget_batteryChargeLabel"
	    android:layout_width="fill_parent" android:layout_height="wrap_content"
	    android:paddingLeft="4dp" android:paddingRight="4dp" android:textColor="@color/light_grey"
	    android:text="-----------------" />
	    
	<TextView android:id="@+id/deviceInfoWidget_mobile"
		android:layout_below="@id/deviceInfoWidget_batteryChargeLabel"
	    android:layout_width="wrap_content" android:layout_height="wrap_content"
	    android:paddingTop="4dp" android:paddingLeft="4dp" android:paddingRight="4dp" android:textColor="@color/light_grey"
	    android:text="Mobile Data:" />
	<TextView android:id="@+id/deviceInfoWidget_mobile_ipAddressLabel"
		android:layout_below="@id/deviceInfoWidget_mobile"
	    android:layout_width="wrap_content" android:layout_height="wrap_content"
	    android:paddingLeft="4dp" android:paddingRight="4dp" android:textColor="@color/light_grey"
	    android:text="IP Address:" />
	<TextView android:id="@+id/deviceInfoWidget_mobile_ipAddressValue" 
		android:layout_toRightOf="@id/deviceInfoWidget_mobile_ipAddressLabel" android:layout_below="@id/deviceInfoWidget_mobile"
	    android:layout_width="fill_parent" android:layout_height="wrap_content"
	    android:paddingLeft="4dp" android:paddingRight="4dp" android:textColor="@color/light_grey"
	    android:text="---" />
	    
	<TextView android:id="@+id/deviceInfoWidget_wifi"
		android:layout_below="@id/deviceInfoWidget_mobile_ipAddressLabel"
	    android:layout_width="wrap_content" android:layout_height="wrap_content"
	    android:paddingTop="4dp" android:paddingLeft="4dp" android:paddingRight="4dp" android:textColor="@color/light_grey"
	    android:text="WIFI Data:" />
	<TextView android:id="@+id/deviceInfoWidget_wifi_ipAddressLabel"
		android:layout_below="@id/deviceInfoWidget_wifi"
	    android:layout_width="wrap_content" android:layout_height="wrap_content"
	    android:paddingLeft="4dp" android:paddingRight="4dp" android:textColor="@color/light_grey"
	    android:text="IP Address:" />
	<TextView android:id="@+id/deviceInfoWidget_wifi_ipAddressValue" 
		android:layout_toRightOf="@id/deviceInfoWidget_wifi_ipAddressLabel" android:layout_below="@id/deviceInfoWidget_wifi"
	    android:layout_width="fill_parent" android:layout_height="wrap_content"
	    android:paddingLeft="4dp" android:paddingRight="4dp" android:textColor="@color/light_grey"
	    android:text="---" />

</RelativeLayout>
